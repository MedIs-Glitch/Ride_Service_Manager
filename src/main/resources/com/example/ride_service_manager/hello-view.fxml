<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ride_service_manager.HelloController">
   <center>
        <VBox alignment="CENTER" prefWidth="300.0" styleClass="branding-side">
            <children>
                <Label text="Welcome Back" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Label>
            </children>
        </VBox>
   </center>
   <right>

                    <VBox alignment="CENTER_LEFT" prefWidth="400.0" spacing="25.0" styleClass="input-side" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <Label text="Login" textFill="#2d3436">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                            <TextField promptText="Username" styleClass="modern-input" />
                  <PasswordField fx:id="psw" promptText="Password" styleClass="modern-input" />

                            <Hyperlink onAction="#onForgotPSWClicked" styleClass="forgot-link" text="Forgot Password?" />

                            <Button maxWidth="Infinity" onAction="#onLoginClicked" styleClass="login-btn" text="Login" />
                  <Label text="New here?" />

                            <HBox alignment="CENTER" spacing="5.0">
                    <children>
                  <Hyperlink onAction="#onRegisterPassengerClicked" styleClass="register-link" text="Register as new passenger" />
                  <Hyperlink onAction="#onRegisterDriverClicked" styleClass="register-link" text="Register as new driver" />
                    </children>
                </HBox>
            </children>
        </VBox>
   </right>
</BorderPane>
