<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ride_service_manager.PreferenceController" stylesheets="style.css">
    <Label text="Available Options" styleClass="title-label" />
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Type:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="typeCombo" promptText="Standard/Premium" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Est. Price:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="priceLabel" text="-- DZD" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Travel Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="timeLabel" text="-- mins" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Passengers:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="passengerInput" prefWidth="50" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>
    <Button text="Find Drivers" onAction="#onFindDriversClicked" styleClass="login-btn"/>
</VBox>