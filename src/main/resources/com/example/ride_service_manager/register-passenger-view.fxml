<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ride_service_manager.RegisterPassengerController">
   <top>
      <VBox alignment="CENTER" prefHeight="66.0" prefWidth="600.0" styleClass="branding-side" BorderPane.alignment="CENTER">
         <children>
            <Label text="Passenger Registration" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <left>
      <VBox alignment="TOP_CENTER" minWidth="400.0" prefHeight="334.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="f1" onKeyTyped="#onActionRestore" promptText="First name" styleClass="modern-input" />
            <TextField fx:id="f2" onKeyTyped="#onActionRestore" promptText="Family name" styleClass="modern-input" />
            <TextField fx:id="f3" onKeyTyped="#onActionRestore" promptText="Email" styleClass="modern-input" />
            <TextField fx:id="f4" onKeyTyped="#onActionRestore" promptText="Phone Number" styleClass="modern-input" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <VBox alignment="TOP_CENTER" minWidth="400.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <PasswordField fx:id="password" onKeyTyped="#onActionRestore" promptText="Password" styleClass="modern-input" />
            <PasswordField fx:id="password2" onKeyTyped="#onActionRestore" promptText="Confirm password" styleClass="modern-input" />
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label minWidth="40.0" text="Wilaya" HBox.hgrow="ALWAYS" />
                  <HBox prefWidth="200.0" />
                  <ComboBox fx:id="wilayaCombo" onAction="#onActionRestore" prefWidth="150.0" promptText="Select Wilaya..." styleClass="modern-input">
                     <contextMenu>
                        <ContextMenu>
                          <items>
                            <MenuItem mnemonicParsing="false" text="Unspecified Action" />
                          </items>
                        </ContextMenu>
                     </contextMenu>
                  </ComboBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onRegisterClicked" styleClass="login-btn" text="Register" />
            <HBox alignment="CENTER">
               <children>
                  <Label text="Already have an account?" />
                  <Hyperlink onAction="#onLoginClicked" styleClass="forgot-link" text="Login..." />
               </children>
            </HBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane>
