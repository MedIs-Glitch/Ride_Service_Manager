<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ride_service_manager.PassengerController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20.0" styleClass="branding-side" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="welcomeLabel" text="Welcome, User!" textFill="WHITE">
                    <font><Font name="System Bold" size="18.0" /></font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#onPreferenceClicked" styleClass="secondary-btn" text="Enter your preference for this ride!" />
                <Button onAction="#onAccountClicked" styleClass="secondary-btn" text="Account" />
                <Button styleClass="secondary-btn" text="Ride History" />
                <Label text="Last Ride: Completed" textFill="#d1d1d1" />
            </children>
            <padding><Insets left="20.0" right="20.0" /></padding>
        </HBox>
    </top>

    <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="NEVER">
         <content>
              <VBox fx:id="contentArea" alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: white;" />
         </content>
      </ScrollPane>
    </center>
</BorderPane>
